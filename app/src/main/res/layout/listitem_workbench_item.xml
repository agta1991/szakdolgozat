<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/workbenchItemCard"
        android:layout_width="@dimen/workbench_item_size"
        android:layout_height="@dimen/workbench_item_size"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/item_normal_bg"
        app:cardCornerRadius="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:contentPadding="-8dp">

        <ImageView
            android:id="@+id/workbenchThumbnailIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:paddingLeft="-3dp"
            android:paddingRight="-3dp"/>

    </android.support.v7.widget.CardView>

</FrameLayout>